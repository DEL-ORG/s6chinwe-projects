# Use a PostgreSQL base image
FROM postgres:latest

# Install AWS CLI
RUN apt-get update && \
    apt-get install -y \
    python3 \
    python3-pip \
    curl \
    unzip \
    groff \
    less \
    && curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip" \
    && unzip awscliv2.zip \
    && sudo ./aws/install \
    && rm awscliv2.zip \
    && rm -rf aws \
    && rm -rf /var/lib/apt/lists/*

# Set environment variables for AWS credentials
ENV AWS_ACCESS_KEY_ID='AKIAZI2LE2Z6CLDSGQZ7'
ENV AWS_SECRET_ACCESS_KEY='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'
ENV AWS_DEFAULT_REGION='us-east-1'
ENV DB_NAME='s6-user'
ENV DB_USER='doadmin'
ENV DB_HOST='db-postgresql-nyc3-26515-do-user-12198957-0.c.db.ondigitalocean.com'
ENV DB_PORT='25060'
ENV DB_PASSWORD='AVNS_HkmaatXJL1QfH60HmnZ'
ENV S3_BUCKET='del-db-backup/S6/s6chinwe/'

# Set the working directory
WORKDIR /backup

# Copy the backup script into the container
COPY ..

# Grant execute permission to the backup script
RUN chmod +x /backup/backup.sh

# Set the command to run the backup script
CMD ["./backup.sh"]